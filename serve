<?php

declare(strict_types=1);

use Dotenv\Dotenv;

ini_set("display_errors", 1);
error_reporting(E_ALL);

require __DIR__ . "/vendor/autoload.php";

$dotenv = Dotenv::createImmutable(__DIR__);
$dotenv->load();

$path = base_path("public");
$url = env("app_url");
$command = "/usr/bin/php -S {$url} -t {$path}";

shell_exec($command);
